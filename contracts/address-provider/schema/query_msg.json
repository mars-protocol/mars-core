{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryMsg",
  "anyOf": [
    {
      "description": "Get config",
      "type": "object",
      "required": [
        "config"
      ],
      "properties": {
        "config": {
          "type": "object"
        }
      }
    },
    {
      "description": "Get a single address",
      "type": "object",
      "required": [
        "address"
      ],
      "properties": {
        "address": {
          "type": "object",
          "required": [
            "address"
          ],
          "properties": {
            "address": {
              "$ref": "#/definitions/MarsAddress"
            }
          }
        }
      }
    },
    {
      "description": "Get a list of addresses",
      "type": "object",
      "required": [
        "addresses"
      ],
      "properties": {
        "addresses": {
          "type": "object",
          "required": [
            "addresses"
          ],
          "properties": {
            "addresses": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/MarsAddress"
              }
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "MarsAddress": {
      "type": "string",
      "enum": [
        "Council",
        "Incentives",
        "InsuranceFund",
        "MarsToken",
        "RedBank",
        "Staking",
        "Treasury",
        "XMarsToken"
      ]
    }
  }
}
